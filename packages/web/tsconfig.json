{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "types": ["@solidjs/start/env", "node", "solid-js", "vinxi/types/client"]
  },
  "exclude": [
    ".output",
    ".vinxi",
    "node_modules",
    "./**/*.test.ts",
    "./**/*.test.tsx",
    "*.config.ts"
  ],
  "extends": "@kurone-kito/typescript-config/tsconfig.json",
  "include": ["./**/*.ts", "./**/*.tsx"]
}
